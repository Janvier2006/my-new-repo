"""
data_processing.py

A sample script for loading and visualizing data in a data science project.
"""

import pandas as pd
import matplotlib.pyplot as plt

# Load dataset (replace 'data/dataset.csv' with your actual data file path)
data = pd.read_csv('data/dataset.csv')

# Show first five rows
print("First five rows of data:")
print(data.head())

# Plot a sample column (replace 'column_name' with your actual column)
if 'column_name' in data.columns:
    data['column_name'].plot(kind='hist')
    plt.title('Distribution of column_name')
    plt.xlabel('column_name')
    plt.show()
else:
    print("Update 'column_name' to match your dataset.")
